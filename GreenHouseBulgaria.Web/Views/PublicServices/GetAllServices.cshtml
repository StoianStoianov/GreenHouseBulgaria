    <!-- Service Tabs -->
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Tabbed Services</h2>
            <ul class="nav nav-tabs" id="myTab">
                <li class="active">
                    <a data-toggle="tab" href="#service-1">@Model[0].Title</a>
                </li>
                @for (int i = 1; i < Model.Count; i++)
                {
                    <li>
                        <a data-toggle="tab" href="#service-@(i+1)">@Model[i].Title</a>
                    </li>
                }
            </ul>
            <div class="tab-content" id="myTabContent">
                @for (int i = 0; i < Model.Count; i++)
                {
                    string classValue = string.Empty;

                    if (i == 0)
                    {
                        classValue = "in active";
                    }
                    <div id="service-@(i + 1)" class="tab-pane fade @classValue">
                        <i class="fa fa-gear pull-left fa-4x"></i>
                        <p>@Model[i].Title</p>
                        <div class="row">
                            @foreach (var price in Model[i].ServicePriceViewModels)
                            {
                                if (colorHelperCounter == 0)
                                {
                                    colorStyle = "green";
                                }
                                else if (colorHelperCounter == 1)
                                {
                                    colorStyle = "red";
                                }
                                else if (colorHelperCounter == 2)
                                {
                                    colorStyle = "blue";
                                }
                                else if (colorHelperCounter == 3)
                                {
                                    colorStyle = "grey";
                                }
                                <div class="columns">
                                    <ul class="price">
                                        <li class="header-@colorStyle">@price.Title</li>
                                        <li class="grey">@price.Description</li>
                                        <li>@price.Price</li>

                                        <li class="grey"><a href="@Url.Action("SubscribeForService", "Subscription", new {servicePriceId = price.Id})" class="button">Поръчай</a></li>
                                    </ul>
                                </div>

                               
                                 colorHelperCounter++;
                                
                                    }

                        </div>

                           @{
                                colorHelperCounter = 0;
                                colorStyle = "green";

                            }
                        </div>
                        }

